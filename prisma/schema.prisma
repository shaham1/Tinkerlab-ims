// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Item {
  id        Int     @id @default(autoincrement())
  name      String
  quantity  Int
  available Boolean @default(true)
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt

  @@map("items")
}

model Transaction {
  id          Int     @id @default(autoincrement())
  student_id  String
  student_name String
  type        String  // "borrow" or "return"
  quantity    Int
  item_name   String
  createdAt   DateTime @default(now())

  @@map("transactions")
}

model Damage {
  id          Int     @id @default(autoincrement())
  student_id  String
  student_name String
  item        String
  quantity    Int
  amount      Float
  createdAt   DateTime @default(now())

  @@map("damages")
}